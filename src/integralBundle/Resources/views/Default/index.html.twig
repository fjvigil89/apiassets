{% extends 'integralBundle::layout.html.twig'%}

{% block body%}
	{% block header %}
			<div class="jumbotron" id="private">
				  <h1>Bienvenidos a {{ name }}</h1>  
				  <p class="lead">Obtener información sobre las entidades de la Base de Datos Assets via API Rest </p>			
				<div>
					v1.0
					<a href="http://intranet.upr.edu.cu/">UPR</a>
				</div>
				<a href="http://intranet.upr.edu.cu/">
					<img src="{{ asset ('apiassets/img/logo.png') }}" alt="github-octocat">
				</a>

			</div>
	{%endblock%}
	{% block cuerpo%}		
			<div id="rc-searchers" class="container">

				<div class="row">
					  {% for x in entitys %}
							<div class="col-lg-4">
								<h3>Get {{x}}</h3>
								<div class="input-group" >
									<code id="rc-a-get" class="rc-a-tryit rc-a-code" onclick="metodoGet('{{routers[loop.index-1]}}')">
											<a class="page-scroll" href="#resultado">
											http://apiassets.upr.edu.cu{{routers[loop.index-1]|lower}}
											</a>

									</code>					
								</div>				
							</div>	

							  <!--div class="col-lg-4">
								<h3>Post {{x}}</h3>
								<div class="input-group">
									<code id="rc-a-all" class="rc-a-tryit rc-a-code">http://apisalud.upr.edu.cu/{{x|lower}}s</code>
								</div>
							</div>	

							<div class="col-lg-4">
								<h3>Put {{x}}</h3>
								<div class="input-group">
									<code id="rc-a-all" class="rc-a-tryit rc-a-code">http://apisalud.upr.edu.cu/{{x|lower}}s/{id}</code>
								</div>
							</div-->	
					  {%endfor%}	

					

					<div id="rc-div-diy" class="col-lg-12" style="margin-top: 10px; margin-bottom: 10px; text-align: center;">
						<h3>Inténtalo tú mismo los GET</h3>
						<div class="input-group">
							<input class="form-control rc-input-tryit" type="text" id="browser" value="">
								<span class="input-group-btn">
									<a class="btn btn-default rc-a-diy">Inténtalo aqui</a>
								</span>
						</div>
					</div>


				</div>
			</div>

			<div class="container" id="resultado">
				<div class="row">
					<div class="col-lg-11" style="margin-top: 10px;">
						<div id="rc-json-well" class="well">
							<pre style="border: 0px !important; font-size: 9pt;">
								
								<div id="info"></div>
							</pre>	
						</div>
					</div>
					<div id="rc-warning" class="col-lg-11 hidden" style="margin-top: 10px;">
		       			<div class="alert alert-warning fade in">
					        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
					        <strong>Holy guacamole!</strong> We don't have country data about that one =(
						</div>
		        	</div>
		        	<div id="rc-error" class="col-lg-11 hidden" style="margin-top: 10px;">
			        	<div class="alert alert-block alert-danger fade in">
					        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
					        <h4>Well... you just broke it</h4>
					        <p>I will greatly appreciate if you report a bug in either </p>
					        
					        
						</div>
					</div>
				</div>
			</div>



	{% endblock%}

	{% block footer %}
		
	{% endblock%}








{% endblock%}

